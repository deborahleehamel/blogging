<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1 class="title"><%= @post.title %></h1>
    <p class="date">Published <%= time_ago_in_words(@post.created_at) %> Ago
  </p>

    <p class="body">
      <%= @post.body %>
    </p>
    <p class="author">
      <%= @post.author %>
    </p>
  </div>
  <%= link_to "<< Back to Post Index", posts_path %>
</div>
